<div class="mt-2 p-2 border rounded bg-gray-100">
  <div class="mb-3 text-lg"><%= post.body %></div>

  <span class="opacity-50">
    <strong><%= post.username %></strong>
    <small><%= time_ago_in_words post.created_at %> ago</small>
  </span>

  <%= link_to repost_rails_post_path(post.id), method: :post, class: "ml-2 test-sm text-blue-500 underline" do %>
    <%= tag.span post.reposts_count, id: dom_id(post, "reposts") %> reposts
  <% end %>
  <%= link_to like_rails_post_path(post.id), method: :post, class: "ml-2 test-sm text-blue-500 underline" do %>
    <%= tag.span post.likes_count, id: dom_id(post, "likes") %> likes
  <% end %>
</div>
